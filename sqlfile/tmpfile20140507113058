CREATE TABLE `report_email_ statis` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT '自增ID',
  `stat_date` date DEFAULT NULL COMMENT '统计日期',
  `tplID` varchar(100) NOT NULL COMMENT '模板ID',
`tpl_name` varchar(80) NOT NULL DEFAULT '0' COMMENT '模板名称',
  `mail_send` int(11) DEFAULT '0' COMMENT '发送',
  `mail_sent` int(11) DEFAULT '0' COMMENT '成功发送',
  `mail_open` int(11) DEFAULT '0' COMMENT '打开',
  `mail_click` int(11) DEFAULT '0' COMMENT '点击',
  `update_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '更新时间',
  `create_time` timestamp NOT NULL DEFAULT '0000-00-00 00:00:00' COMMENT '创建时间',
  PRIMARY KEY (`id`),
  UNIQUE KEY `stat_date` (`stat_date`,`tplID`)
) COMMENT='邮件发送统计 by panbing.wu’;